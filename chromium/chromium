#!/bin/bash

docker run -it \
	--net host \
	--cpuset-cpus 0 \
	--memory 512mb \
	-v /tmp/.X11-unix:/tmp/.X11-unix \
	-e DISPLAY=unix$DISPLAY \
	-v $HOME/downloads:/home/chromium/Downloads \
	-v $HOME/.config/dchromium/:/data \
	--security-opt seccomp=$HOME/chrome.json \
	--device /dev/snd \
	-v $XAUTHORITY:/keepass/.Xauthority:ro \
	-e XAUTHORITY="/keepass/.Xauthority" \
	-h $HOSTNAME \
	-u $(id -u) \
	-v /dev/shm:/dev/shm \
	--name chromium \
	chromium
